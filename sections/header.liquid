        <div class='navbar-main__left'>
          <div class='mobile-menu__toggle show-mobile'>
            <a href='#' class='js-mobile-menu__toggle'>
              <span></span>
              <span></span>
              <span></span>
            </a>
          </div>
          <a href='/' class='navbar-main__logo'>
            {% if section.settings.logo_image != blank %}
              <img
                src='{{ section.settings.logo_image | image_url: width: '150' }}'
                alt='{{ section.settings.logo_text }}'
                {% if section.settings.dark_logo_image %}
                  class='light-logo'
                {% endif %}
              >

              {% if section.settings.dark_logo_image %}
                <img
                  src='{{ section.settings.dark_logo_image | image_url: width: '150' }}'
                  alt='{{ section.settings.logo_text }}'
                  class='dark-logo'
                >
              {% endif %}
            {% else %}
              <strong>{{ section.settings.logo_text }}</strong>
            {% endif %}
          </a>

          <ul class='navbar-links show-desktop'>
            {% assign menu = section.settings['top-menu'] %}
            {% for link in linklists[menu].links %}
              {% assign link_handle = link.title | handle %}
              <li>
                <a
                  href='{{ link.url }}'

                  {% if link_handle == 'shop' %}
                    class='megamenu__trigger'
                  {% endif %}
                >
                  {{ link.title }}
                </a>
