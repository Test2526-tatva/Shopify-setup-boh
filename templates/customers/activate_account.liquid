{% render 'navbar--solid' %}

{{ 'customer.css' | asset_url | stylesheet_tag }}
<section class="accounts accounts--activate account-page">
  <div class="accounts__grid">
    <div class="accounts__left">
      <div class="accounts__form">
        <h3>{{ 'customer.activate_account.title' | t }}</h3>
        <p>
          {{ 'customer.activate_account.subtext' | t }}
        </p>
        {%- form 'activate_customer_password' -%}
          {%- if form.errors -%}
            <small class="form__message" tabindex="-1" autofocus>
              {{ 'templates.contact.form.error_heading' | t }}
              {{ 'customer.activate_account.subtext' | t }}
            </small>
            {% comment %}              
            <p>
              {%- for field in form.errors -%}
                {%- if field == 'form' -%}
                  {{ form.errors.messages[field] }}
                {%- else -%}
                  <a href="#{{ field }}">
                    {{ form.errors.translated_fields[field] | capitalize }}
                    {{ form.errors.messages[field] }}
                  </a>
                {%- endif -%}
              {%- endfor -%}
            </p>
            {% endcomment %}
          {%- endif -%}

          <fieldset>
            <input
              type="password"
              name="customer[password]"
              id="password"
              autocomplete="new-password"
              autocapitalize="none"
              placeholder="PASSWORD"
              class="input__field input__field--password"
              {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="password-error"
              {% endif %}>
          </fieldset>

          <fieldset>
            <input
              type="password"
              name="customer[password_confirmation]"
              id="password_confirmation"
              autocomplete="new-password"
              autocapitalize="none"
              placeholder="CONFIRM PASSWORD"
              class="input__field input__field--password"
              {% if form.errors contains 'password' %}
              aria-invalid="true"
              aria-describedby="password_confirmation-error"
              {% endif %}>
          </fieldset>
          <div class="btn__grid">
            <button class="btn btn--pink">
              {{ 'customer.activate_account.submit' | t }}
            </button>
            <button class="btn btn--black" name="decline">
              {{ 'customer.activate_account.cancel' | t }}
            </button>
          </div>
        {% endform %}      
      </div>
    </div>
    <div class="accounts__right">
      <div class="accounts__image">
        <img src="{{ 'account-signin-forgot-password-img.jpg' | asset_img_url: 'master' }}" width="" height="" loading="eager">
      </div>
    </div>
  </div>
</section>
{% comment %}
  
<div class="customer activate">
  <svg style="display: none">
    <symbol id="icon-error" viewBox="0 0 13 13">
      <circle
        cx="6.5"
        cy="6.50049"
        r="5.5"
        stroke="white"
        stroke-width="2" />
      <circle
