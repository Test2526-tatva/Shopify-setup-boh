<script>
  function initMegamenu() {
    let delay;
    let megamenuWait = 300;

    $(`.navbar-megamenu, .megamenu__trigger`).on('mouseenter', function (e) {
      $('body').toggleClass('navbar--show-megamenu', true);
      $('body').removeClass('navbar--show-search');

      clearTimeout(delay);
    });

    $(`.navbar-megamenu, .megamenu__trigger`).on('mouseleave', function (e) {
      clearTimeout(delay);
      delay = setTimeout(function () {
        $('body').removeClass('navbar--show-megamenu');
      }, megamenuWait);
    });

    $('.shop-menu__open').on('click', function (e) {
      e.preventDefault();
      $('body').addClass('shop-menu--show');
    });

    $('.shop-menu__close').on('click', function (e) {
      e.preventDefault();
      $('body').removeClass('shop-menu--show');
    });

    $('.mobile-menu__icon-wrapper').on('click', function (e) {
      e.preventDefault();
      $(this).parent().toggleClass('active');
    });

    // Desktop megamenu__nav click
    $('.navbar-megamenu__nav>li').on('click', function (e) {
      if ($(this).find('.navbar-megamenu__submenu').length > 0) {
        e.preventDefault();
        $(this).addClass('active');

        // if this have dataset
        if ($(this).data('collection_image')) {
          $('.navbar-megamenu__img-block').attr('hidden', true);
          $('.navbar-megamenu__img-block--collection').removeAttr('hidden');
          $('.navbar-megamenu__img-block--collection img').attr('src', $(this).data('collection_image'));
          $('.navbar-megamenu__img-block--collection a').attr('href', $(this).find('a').attr('href'));
        } else {
          $('.navbar-megamenu__img-block').removeAttr('hidden');
          $('.navbar-megamenu__img-block--collection').attr('hidden', true);
          $('.navbar-megamenu__img-block--collection img').attr('src', '');
          $('.navbar-megamenu__img-block--collection a').attr('href', '');
        }

        $('.navbar-megamenu__nav>li').not($(this)).removeClass('active');
      }
    });
    $('.navbar-megamenu__submenu li').on('click', function (e) {
      e.stopPropagation();
    });
  }

  document.addEventListener('DOMContentLoaded', function () {
    initMegamenu();
    {% comment %} $('body').addClass('navbar--show-megamenu'); {% endcomment %}
  });
</script>
