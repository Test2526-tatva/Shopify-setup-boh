{% assign search_recommendations = section.blocks | where: 'type', 'search_recommendations' %}
{% assign account_link = '/account/login' %}

{%- liquid
  capture current_store
    render 'current-store'
  endcapture

  assign current_store = current_store | strip
-%}

{% if customer.id %}
  {% assign account_link = '/pages/dashboard' %}
{% endif %}

<div class='navbar'>
