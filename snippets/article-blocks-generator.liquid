{% for block in section.blocks %}
  {% case block.type %}
  
  {% when 'two_column' %}
    {% render 'block-article-two-column', block: block %}    

    {% when 'quote' %}
      {% render 'block-article-quote', block: block %}

    {% when 'video' %}
      {% render 'block-video', block: block %}

    {% comment %}      
    
    {% when 'body-copy' %}
      {% render 'block-sa-body', block: block %}
      
    {% when 'quote' %}
      {% render 'block-sa-quote', block: block %}
  
    {% when 'large-image' %}
      {% render 'block-sa-large-image', block: block %}

    {% when 'images' %}
      {% render 'block-sa-images', block: block %}
    
    {% when 'recommended' %}
      {% render 'block-sa-recommended', block: block %}

    {% endcomment %}

  {% endcase %}
     
  {% render 'block-padding', block: block %}
{% endfor %}
