{% render 'navbar--solid' %}

{% comment %}  
  {{ 'customer.css' | asset_url | stylesheet_tag }}
  {{ 'accounts.css' | asset_url | stylesheet_tag }}
{% endcomment %}<section class="accounts accounts--register accounts__register">
  <div class="accounts__grid">
    <div class="accounts__left">
      <div class="accounts__form">
        <div class="accounts__form--heading">
          <h3>
            Sign Up
          </h3>
                   
            <p>
            Torem ipsum dolor sit amet, consectetur adipiscing elit. Nunc vulputate libero et velit.
            </p>
          
        </div>

        {%- form 'create_customer' -%}
          {% if form.errors %}
            <div class="form__message form__message--errors">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}

          <input
            type="hidden"
            name="return_to"
            value="/pages/dashboard">

          <input
            type="hidden"
            name="customer[tags]"
            value="accepts">

          <fieldset>
            <label for="RegisterForm-FirstName">First Name*</label>
            <input
              type="text"
              class="input__field"
              id="RegisterForm-FirstName"
              name="customer[first_name]"
              {% if form.first_name %}
              value="{{ form.first_name }}"
              {% endif %}
              placeholder="{{ 'customer.register.first_name' | t }}"
              required>
          </fieldset>

          <fieldset>
            <label for="RegisterForm-LastName">Last Name*</label>
            <input
              type="text"
              class="input__field"
              id="RegisterForm-LastName"
              name="customer[last_name]"
              {% if form.first_name %}value="{{ form.last_name }}"{% endif %}
              placeholder="{{ 'customer.register.last_name' | t }}"
              required>
          </fieldset>

          <fieldset>
            <label for="RegisterForm-email">Email Address*</label>
            <input
              type="email"
              class="input__field"
              id="RegisterForm-email"
              name="customer[email]"
              {% if form.email %}
              value="{{ form.email }}"
              {% endif %}
              placeholder="{{ 'customer.register.email' | t }}"
              pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$"
              required>
          </fieldset>

          <fieldset>
            <label for="RegisterForm-password">Password*</label>
            <input
              type="password"
              autocapitalize="none"
              class="input__field input__field--password"
              id="RegisterForm-password"
              name="customer[password]"
              placeholder="{{ 'customer.register.password' | t }}"
              required>
          </fieldset>

          {% comment %} 
          <fieldset class="input__checkbox">
            <label class="input__checkbox--container">
              <input
                type="checkbox"
                name="address[default]"
                value="1" />
              <span class="checkmark"></span>
              <span>
                Sign up to receive 10% off your first purchase
              </span>
            </label>
          </fieldset>
          {% endcomment %} 

          <fieldset>
            <input
              type="submit"
              class="input__submit button primary-button--dark"
              value="Sign Up">
          </fieldset>
        {% endform %}
        <div class="input__link">
          <p>
            <a class="underline-link" href="{{ routes.account_login_url | append: '#login' }}">Already have an account? Sign In</a>
          </p>
        </div>
      </div>
    </div>
    <div class="accounts__right">
      <div class="accounts__image">
        <img src="{{ 'auth-right-img.jpg' | asset_img_url: 'master' }}" />
      </div>
    </div>
  </div>
</section>