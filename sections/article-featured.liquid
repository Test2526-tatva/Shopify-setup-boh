
  <div class="article-featured">
    <div class="article-featured__container">
      <div class="article-featured__grid">
        <div class="article-featured__left">
          <div class="article-featured__content">
            <h5>
              {{ section.settings.title }}
            </h5>
            {{ article.excerpt }}
          </div>
        </div>
        <div class="article-featured__right">
          <div class="article-featured__product">
            Product card goes here
          </div>
        </div>
      </div>
    </div>
  </div>



{% schema %}
  {
    "name": "Featured article",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Featured in this Article"
      }
    ]
  }
{% endschema %}