      </div>

      {% comment %}
        <div class='shop-menu__cards'>
          {% for block in section.blocks %}
            {% if block.type == 'megamenu_img_block' %}
              <div class='shop-menu__card'>
                <a href='{{ block.settings.link }}'></a>

                <div class='shop-menu__card-image'>
                  <img src='{{ block.settings.image | image_url }}' alt=''>
                </div>
                <div class='shop-menu__card-label'>
                  <h4>
                    {{ block.settings.title }}
                  </h4>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endcomment %}
    </div>
