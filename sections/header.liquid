    <div class='mobile-menu mobile-menu--shop'>
      <div class='mobile-menu__links'>
        <ul>
          <li>
            <a class='shop-menu__close' href='#'> Back </a>
          </li>
          {% assign megamenu = section.settings.megamenu %}
          {% for link in linklists[megamenu].links %}
            <li
              {% if link.links.size > 0 %}
                class='has-submenu'
              {% endif %}
            >
              <div class='mobile-menu__icon-wrapper'>
                <a href='{{ link.url }}'>
                  {{ link.title }}
                </a>
                {% if link.links.size > 0 %}
                  {% render 'icon-arrow-bottom' %}
                {% endif %}
              </div>
              {% if link.links.size > 0 %}
                <div class='mobile-menu__submenu'>
                  <ul class='mobile-menu__children'>
                    {% for child_link in link.links %}
                      <li>
                        <a href='{{ child_link.url }}'>
                          {{ child_link.title }}
                        </a>

                        {% if child_link.links.size > 0 %}
                          <ul class='mobile-menu__grandchildren'>
                            {% for grandchild_link in child_link.links %}
                              <li>
                                <a href='{{ grandchild_link.url }}'>
                                  {{ grandchild_link.title }}
