    <div class='mobile-menu mobile-menu--default'>
      <div class='mobile-menu__links'>
        <ul>
          {% assign menu = section.settings['top-menu'] %}
          {% for link in linklists[menu].links %}
            {% assign link_handle = link.title | handle %}
            <li>
              <a
                href='{{ link.url }}'

                {% if link_handle == 'shop' %}
                  class='shop-menu__open'
                {% endif %}
              >
                {{ link.title }}
                {% render 'icon-arrow-right' %}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      {% comment %}
        <div class='mobile-menu__blocks'>
          <div class='accordion'>
            <div class='accordion-item'>
              <div class='accordion-item__label mobile-country'>
                <label class='label--grid'>
                  {% render 'country-flag' %}

                  Ship to

                  {% case current_store %}
                    {% when 'NZ' %}
                      New Zealand

                    {% when 'AU' %}
                      Australia

                    {% when 'UK' %}
                      UK

                    {% when 'US' %}
                      USA
                  {% endcase %}
                </label>

                <div class='accordion-item__icon'>
                  <div class='active'>
                    {% render 'icon-arrow-up' %}
                  </div>
                  <div class='default'>
                    {% render 'icon-arrow-down' %}
                  </div>
                </div>
              </div>

