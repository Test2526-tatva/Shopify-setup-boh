    <div class='navbar-megamenu'>
      <div class='navbar-megamenu__grid'>
        <div class='navbar-megamenu__left'>
          <ul class='navbar-megamenu__nav'>
            {% assign megamenu = section.settings.megamenu %}
            {% for link in linklists[megamenu].links %}
              <li
                {% if link.links.size > 0 and link.type == 'collection_link' and link.object.image %}
                  data-collection_image='{{ link.object.image | image_url: width: '900' }}'
                {% endif %}
              >
                <a
                  href='{{ link.url }}'
                  {% if section.settings.highlight_menu contains link.title %}
                    class='p-strong'
                  {% endif %}
                >
                  {{ link.title }}
                  {% if link.links.size > 0 %}
                    {% render 'icon-arrow-right' %}
                  {% endif %}
                </a>

                {% if link.links.size > 0 %}
                  <div class='navbar-megamenu__submenu'>
                    <div class='navbar-megamenu__submenu--left'>
                      <ul>
                        {% for child_link in link.links %}
                          <li>
                            <a
                              href='{{ child_link.url }}'
                              {% if section.settings.highlight_menu contains child_link.title %}
                                class='p-strong'
                              {% endif %}
                            >
                              {{ child_link.title }}
                            </a>

                            {% if child_link.links.size > 0 %}
                              <div class='navbar-megamenu__grandchild'>
                                <ul>
                                  {% for grandchild_link in child_link.links %}
                                    <li>
                                      <a
                                        href='{{ grandchild_link.url }}'
                                        {% if section.settings.highlight_menu contains grandchild_link.title %}
                                          class='p-strong'
                                        {% endif %}
                                      >
                                        {{ grandchild_link.title }}
                                      </a>
                                    </li>
                                  {% endfor %}
                                </ul>
                              </div>
                            {% endif %}
                          </li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class='navbar-megamenu__right'>
          {% for block in section.blocks %}
            {% if block.type == 'megamenu_img_block' %}
              <div class='navbar-megamenu__img-block'>
                <div class='navbar-megamenu__img-block--image'>
                  <img src='{{ block.settings.image | image_url }}' alt=''>
                </div>
                <div class='megamenu_img_block_overlay_info'>
                  <h6 class='navbar-megamenu__img-block--text'>
                    {{ block.settings.title }}
                  </h6>
                  <a class='megamenu_img_block_overlay_info--link' href='{{ block.settings.link }}'>Shop Now</a>
                </div>
                <a class='navbar-megamenu__img-block--link' href='{{ block.settings.link }}'></a>
              </div>
            {% endif %}
          {% endfor %}
          <div class='navbar-megamenu__img-block navbar-megamenu__img-block--collection' hidden>
            <div class='navbar-megamenu__img-block--image'>
              <img src='' alt=''>
            </div>
            <div class='megamenu_img_block_overlay_info'>
              <h6 class='navbar-megamenu__img-block--text'></h6>
              <a class='navbar-megamenu__img-block--link' href=''></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

