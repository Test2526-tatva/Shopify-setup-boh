    {% comment %}
      {% if template.name != 'index' %}
        <div
          class='navbar__announcement announcement-bar__wrapper'
          {% if template.name == 'index' %}
            hidden
          {% endif %}
        >
          {% assign announcements = section.blocks | where: 'type', 'announcement' %}
          {% render 'announcement-bar',
            announcements: announcements,
            section_id: section.id,
            reappear_after: section.settings.reappear_after
          %}
        </div>
      {% endif %}
    {% endcomment %}

    <div
      class='
        navbar__announcement announcement-bar__wrapper  {% if template.name == 'index' %}
          show-mobile
        {% endif %}
      '
    >
      {% assign announcements = section.blocks | where: 'type', 'announcement' %}
      {% render 'announcement-bar',
        announcements: announcements,
        section_id: section.id,
        reappear_after: section.settings.reappear_after
      %}
    </div>
  {% endif %}
