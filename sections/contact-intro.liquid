{% render 'navbar--solid' %}

<div class="contact-intro padding__bottom--xxlarge">
  <div class="contact-intro__container">
    <h1 class="contact-intro__heading margin__bottom--xlarge">
      {{ section.settings.title }}
    </h1>
    {% comment %}
      <p class="caption">( for NZ-AU Location )</p>
    {% endcomment %}
    <div class="contact-intro__grid contact-intro__grid--nz-au">
      {% for block in section.blocks %}
        {% assign classes = '' %}

        {% if block.type == 'item_nz_au' %}
          <div class="contact-intro__column">
            <div class="contact-intro__column--content">
              <h5>{{ block.settings.title }}</h5>
              {{ block.settings.content }}

              {% if block.settings.trigger_gorgias == true %}
                {% assign classes = 'js-gorgias-open' %}
              {% endif %}

              {% if block.settings.button_link != blank %}
                <a href="{{ block.settings.button_link }}" class="button secondary-button--outline-dark {{ classes }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% comment %} <p class="caption">( for UK-US Location )</p>
      <div class="contact-intro__grid contact-intro__grid--uk-us">
      {% for block in section.blocks %}
      {% if block.type == 'item_uk_us' %}
      <div class="contact-intro__column">
      <div class="contact-intro__column--content">
      <h5>{{ block.settings.title }}</h5>
      {{ block.settings.content }}
      {% if block.settings.button_link != blank %}
      <a href="{{ block.settings.button_link }}" class="button secondary-button__outline">
      {{ block.settings.button_text }}
      </a>
      {% endif %}
      </div>
      </div>
      {% endif %}
      {% endfor %}
      </div>
    {% endcomment %}
  </div>
</div>

{% schema %}
  {
    "name": "Intro",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      }
    ],
    "blocks": [
      {
        "name": "column item nz-au",
        "type": "item_nz_au",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          }, {
            "id": "content",
            "type": "richtext",
            "label": "Content"
          }, {
            "id": "button_text",
            "type": "text",
            "label": "Button Text"
          }, {
            "id": "button_link",
            "type": "url",
            "label": "Button Link"
          },
          {
            "type": "checkbox",
            "id": "trigger_gorgias",
            "label": "Button: Trigger Gorgias",
            "default": false
          }
        ]
      }, {
        "name": "column item uk-us",
        "type": "item_uk_us",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          }, {
            "id": "content",
            "type": "richtext",
            "label": "Content"
          }, {
            "id": "button_text",
            "type": "text",
            "label": "Button Text"
          }, {
            "id": "button_link",
            "type": "url",
            "label": "Button Link"
          }
        ]
      }
    ]
  }
{% endschema %}